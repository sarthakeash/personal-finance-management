<!DOCTYPE html>
<html>
      <head>
            <title>Home Page</title>
            <link rel="stylesheet" href="stylesheets/fonts.css" />
            <link rel="stylesheet" href="stylesheets/home.css" />
            <link rel="stylesheet" href="stylesheets/header.css" />
      </head>

      <body>
        <!-- the header component -->
            <header id="header"><%- include("header.ejs") %></header>
            <div class="homeWrapper">
                  <div class="mainHeading">
                        Click on the user to get the their financial info
                  </div>
                  <!-- the user card wrapper -->
                  <div class="userCardWrapper">

                        <% users.forEach(function(user){ %>
                              <a href="/user/<%= user.aadharNo %> ">
                                    <div class="userCard">
                                          <div class="userImg">
                                                <img
                                                      src="https://i.pravatar.cc/150?img=<%= user.aadharNo.toString().substring(10,12) %>"
                                                      alt=""
                                                />
                                          </div>
      
                                          <div class="userDetails">
                                                <p><%= user.name %> </p>
                                                <span>uid: <%= user.aadharNo %> </span>
                                          </div>
                                    </div>
                              </a>
                              <% }); %>
                     

                  </div>
            </div>
<!-- the footer component -->
            <footer id="footer"><%- include("footer.ejs") %></footer>
      </body>
</html>
